
.copyright_block
  margin-top 40px
  background-color: #575757;
  text-align: center;
  padding: 20px 0;
  &:hover
    .edit-footer
      opacity 1
.copy_txt
  color: #fff;
  font-family: "RalewayRegular", sans-serif;
  font-size: 14px;
  @media screen and (max-width: 2000px)
    padding-top: 70px
  @media screen and (max-width: 500px)
    padding-top: 20px
    font-size: 9pt

.edit-footer
  position relative
  font-size 1.5em
  opacity 0
  transition opacity .3s
  cursor pointer
  color gray
