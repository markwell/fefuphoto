.contacts_inner
  margin-top: 20px
  text-align: center
  i
    font-size: 36px
    color: #c5c5c5
    margin-bottom: 12px
  span
    text-transform: uppercase
    font-family: "RalewayRegular", sans-serif
    font-size: 18px
    color: #b4b4b4
  a
    color: #000
    color: #303030
  form
    margin 20px
    padding 20px
    border 2px dotted gray
  .contact-block
    margin-top 60px
    &:hover
      .remove-contact
        display block
  .remove-contact
    display block
    position absolute
    color red
    font-size: 1.5em
    left 80px
    top -15px
    display none
    cursor pointer
