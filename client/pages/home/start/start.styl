#start
  	height: 900px
  	background-image: url('../img/banner.jpg')
  	-webkit-background-size: cover
  	background-size: cover
.title_block
  color: #ebebeb
  text-align: center
  margin: 260px 200px
  @media screen and (max-width: 1000px)
    margin 150px 100px
  @media screen and (max-width: 800px)
    margin 120px 70px
  @media screen and (max-width: 500px)
    margin 100px 10px
.title_block h3
  font-size: 30px
  font-family: 'RalewayRegular', sans-serif
  margin-bottom: 30px

.title_block p
  font-size: 15px
  margin-bottom: 50px

.title_block img
  width: 100px
  height: 110px
  margin: 0 auto
  opacity: 0.5
